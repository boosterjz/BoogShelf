@page "/admin/authors/edit/{id:long}"
@page "/admin/authors/create"
@inherits OwningComponentBase<IStoreRepository>

<style>
    div.validation-message { color: rgb(220, 53, 69); font-weight: 500 }
</style>

<h3 class="bg-@ThemeColor text-white text-center p-1">@TitleText автора</h3>
<EditForm Model="Author" OnValidSubmit="SaveAuthor">
    <DataAnnotationsValidator />
    @if(Author.AuthorId != 0) {
        <div class="form-group">
            <label>ID</label>
            <input class="form-control" disabled value="@Author.AuthorId" />
        </div>
    }
    <div class="form-group">
        <label>Имя</label>
        <ValidationMessage For="@(() => Author.Name)" />
        <InputText class="form-control" @bind-Value="Author.Name" />
    </div>
    <div class="form-group">
        <label>Год рождения</label>
        <ValidationMessage For="@(() => Author.BirthYear)" />
        <InputNumber class="form-control" @bind-Value="Author.BirthYear" />
    </div>
    <div class="form-group">
        <label>Год смерти</label>
        <ValidationMessage For="@(() => Author.DeathYear)" />
        <InputNumber class="form-control" @bind-Value="Author.DeathYear" />
    </div>
    <div class="mt-2">
        <button type="submit" class="btn btn-@ThemeColor">Сохранить</button>
        <NavLink class="btn btn-secondary" href="/admin/authors">Отмена</NavLink>
    </div>
</EditForm>

@code {

    public IStoreRepository Repository => Service;

    [Inject]
    public NavigationManager? NavManager { get; set; }

    [Parameter]
    public ulong Id { get; set; }

    private Author Author { get; set; } = new();

    protected override void OnParametersSet() {
        if (Id != 0) {
            Author = Repository.Authors.FirstOrDefault(a => a.AuthorId == Id) 
                ?? new Author();
        }
    }

    private void SaveAuthor() {
        if (Id == 0) {
            Repository.CreateAuthor(Author);
        } else {
            Repository.SaveAuthor(Author);
        }
        NavManager?.NavigateTo("/admin/authors");
    }

    private string ThemeColor => Id == 0 ? "primary" : "warning";
    private string TitleText => Id == 0 ? "Создание" : "Редактирование";
}