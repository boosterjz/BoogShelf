@page "/admin/books/details/{id:long}"

<h3 class="bg-info text-white text-center p-1">Информация</h3>

<table class="table table-sm table-bordered table-striped">
    <tbody>
        <tr><th>ID</th><td>@Book?.BookId</td></tr>
        <tr><th>Название</th><td>@Book?.Title</td></tr>
        <tr><th>Автор</th><td>@Book?.Author?.Name</td></tr>
        <tr><th>Категория</th><td>@Book?.Category</td></tr>
        <tr><th>Жанр</th><td>@Book?.Genre</td></tr>
        <tr><th>Описание</th><td>@Book?.Description</td></tr>
        <tr><th>Год издания</th><td>@Book?.PublishingYear</td></tr>
        <tr><th>Издательство</th><td>@Book?.Publishing</td></tr>
        <tr><th>Страниц</th><td>@Book?.PageAmount</td></tr>
        <tr><th>Цена</th><td>@Book?.Price.ToString("C")</td></tr>
    </tbody>
</table>

<NavLink class="btn btn-warning" href="@EditUrl">Edit</NavLink>
<NavLink class="btn btn-secondary" href="/admin/books">Back</NavLink>

@code {

    [Inject]
    public IStoreRepository? Repository { get; set; }

    [Parameter]
    public ulong Id { get; set; }

    private Book? Book { get; set; }

    protected override void OnParametersSet() {
        Book = Repository?.Books.FirstOrDefault(p => p.BookId == Id);
    }

    private string EditUrl => $"/admin/products/edit/{Book?.BookId}";
}