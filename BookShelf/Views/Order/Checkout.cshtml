@model Order

<h2>Подтверждение</h2>
<p>Пожалуйста, введите данные для заказа, и мы его доставим как можно раньше</p>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Checkout" method="post">
    <h3>Кому доставить</h3>
    <div class="form-group">
        <label>Имя:</label><input asp-for="Name" class="form-control" />
    </div>
    <h3>Адрес</h3>
    <div class="form-group">
        <label>Улица:</label><input asp-for="Line1" class="form-control" />
    </div>
    <div class="form-group">
        <label>Дом, корпус:</label><input asp-for="Line2" class="form-control" />
    </div>
    <div class="form-group">
        <label>Квартира:</label><input asp-for="Line3" class="form-control" />
    </div>
    <div class="form-group">
        <label>Город:</label><input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label>Индекс:</label><input asp-for="Zip" class="form-control" />
    </div>
    <div class="form-group">
        <label>Страна:</label><input asp-for="Country" class="form-control" />
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Complete Order" />
    </div>
</form>
